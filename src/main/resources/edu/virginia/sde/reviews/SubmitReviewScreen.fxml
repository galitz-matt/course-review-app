<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="edu.virginia.sde.reviews.SubmitReviewController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox>
        <Label fx:id="userLabel" />
    </HBox>
    <HBox>
        <Label fx:id="courseLabel" />
    </HBox>
    <GridPane VBox.vgrow="ALWAYS">
        <Label text="Rating: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Comment: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="commentField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    <Label fx:id="messageLabel"/>
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
        <Button text="Submit" onAction="#handleSubmitAction"/>
        <Button text="Go Back" onAction="#handleGoBackAction"/>
    </HBox>
</VBox>
