<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.AddCourseController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox>
        <Label fx:id="userLabel"/>
    </HBox>
    <GridPane VBox.vgrow="ALWAYS" hgap="10" vgap="10" alignment="CENTER">
        <Label text="Subject:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="subjectField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="numberField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Title:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    <Label fx:id="messageLabel" style="-fx-alignment: baseline-center;"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Add" onAction="#handleAddAction" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Button text="Go Back" onAction="#handleGoBackAction" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </HBox>
</VBox>
